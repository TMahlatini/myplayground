<div class="conversation-post-navigation">
  <% if @prev %>
    <% prev_identifier = File.basename(@prev, ".md") %>
    <%= link_to "← Previous", conversation_post_path(prev_identifier), class: "nav-arrow prev" %>
  <% end %>
  <% if @next %>
    <% next_identifier = File.basename(@next, ".md") %>
    <%= link_to "Next →", conversation_post_path(next_identifier), class: "nav-arrow next" %>
  <% end %>
</div>

<div class="section-text">
  <%= @markdown.html_safe %>
</div>